    <style name="Base.Theme.WorldCinema" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.WorldCinema" parent="Base.Theme.WorldCinema" />

    <style name="customOutlinedButton.Orange" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">#FF5722</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#000000</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="customOutlinedButton.Black" parent="customOutlinedButton.Orange">
        <item name="backgroundTint">#F1000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#8C8C8C</item>
    </style>
